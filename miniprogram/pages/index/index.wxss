/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.section {
  font-family: Mandali, Arial, sans-serif;
  font-size: 16px;
  position: absolute;
  width: 80%;
  top: 30%;
  left: 50%;
  transform: translate(-50%, -50%);
}

button.button {
  font-size: 14px;
  font-weight: bold;
  width: 30%;
}

.table {
  border: 0px solid darkgray;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 4rem;
  align-items: center;
}
.td1 {
    width:20%;
    font-size: 14px;
    justify-content: center;
    text-align: center;
}

.td2 {
    width:50%;
    font-size: 14px;
    justify-content: center;
    text-align: center;
}
.bg-w{
  background: snow;
}
.bg-g{
  background: #daedf0;
}
